<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>Secretaria</title>
    <%- include('../componentes/head_links'); %>
</head>
<body>
    <header id="topo">
        <%- include('../componentes/menu_acessibilidade'); %>
         
        <!--imagem header-->
        <%- include('../componentes/imagem_header'); %>

        <!--menu-->
        <%- include('../componentes/nav'); %>
        
        <div vw class="enabled">
            <div vw-access-button class="active"></div>
            <div vw-plugin-wrapper>
              <div class="vw-plugin-top-wrapper"></div>
            </div>
        </div>
          <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
          <script>
            new window.VLibras.Widget('https://vlibras.gov.br/app');
          </script>
    </header>
  <body>
    <main>
    <h1>Edição do Cadastro Bilhete Unico</h1>
       
      
            <form action="/cadastro-contato-edit-salvar" name="form_contato" id="form_contato" method="post" onsubmit="return validar();">
              <input name="id" type="hidden" value=<%=contato.ID %> >
              <fieldset class="fieldset_contato">
                    <legend>ENVIE SUAS DÚVIDAS PARA O NOSSO E-MAIL</legend>
                        
                        <label for="nome" class="required">Nome Completo</label><br>
                        <input type="text" name="nome" id="nome" required placeholder="Nome Completo" value= <%=contato.NOME %>><br>
                        <label for="curso" class="required">Curso</label><br>
                        <input type="text" name="curso" id="curso" required value=<%=contato.CURSO %>><br>
                        <label for="mensagem" class="required">Mensagem</label><br>
                        <textarea name="mensagem" id="mensagem" placeholder="Digite a mensagem aqui" required value= <%=contato.MENSAGEM %>></textarea><br>
                </fieldset>

              <input type="submit" value="Alterar" onclick="location.href='/contato'" />
         </form>
   </main>
   </body>
</html>